---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/jex.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Jex | Frontend Tools</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <meta property="og:image" content="/favikonjex.png" />
        <meta name="twitter:image" content="/favikonjex.png" />
        <script is:inline>
            (function () {
                try {
                    const localTheme = localStorage.getItem("theme");
                    const supportDarkMode = window.matchMedia(
                        "(prefers-color-scheme: dark)",
                    ).matches;

                    // Logic:
                    // 1. If explicit 'theme' in localStorage, use it.
                    // 2. Else default to 'dark' (project requirement), regardless of system preference for now to enforce "Dark by default".

                    if (localTheme === "light") {
                        document.documentElement.classList.remove("dark");
                        document.documentElement.classList.add("light");
                    } else {
                        document.documentElement.classList.add("dark");
                        document.documentElement.classList.remove("light");
                        if (!localTheme) {
                            localStorage.setItem("theme", "dark");
                        }
                    }
                } catch (e) {
                    console.error("Theme init error", e);
                }
            })();
        </script>
    </head>
    <body
        class="bg-gray-50 text-gray-900 dark:bg-[#0a0a0a] dark:text-white font-sans min-h-screen flex flex-col antialiased selection:bg-purple-500/30 transition-colors duration-300"
    >
        <div
            class="fixed inset-0 z-0 opacity-20 pointer-events-none mix-blend-multiply dark:mix-blend-normal"
            style="background-image: url('/noise.svg');"
        >
        </div>

        <header
            class="relative z-10 w-full border-b border-black/5 dark:border-white/5 bg-white/80 dark:bg-black/20 backdrop-blur-md transition-colors duration-300"
        >
            <div
                class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between"
            >
                <a
                    href="/"
                    class="text-xl font-bold tracking-tight flex items-center gap-2 text-gray-900 dark:text-white"
                >
                    <img src="/jex.svg" alt="Jex Logo" class="w-5 h-5" />
                    Jextools
                </a>
                <nav class="flex items-center gap-6">
                    <div
                        class="hidden md:flex gap-6 text-sm font-medium text-gray-600 dark:text-white/60"
                    >
                        <a
                            href="/tools/dot-art"
                            class="hover:text-black dark:hover:text-white transition-colors"
                            >Dot Art</a
                        >
                        <a
                            href="/tools/mesh-gradient"
                            class="hover:text-black dark:hover:text-white transition-colors"
                            >Mesh Gradient</a
                        >
                        <a
                            href="/tools/css-backgrounds"
                            class="hover:text-black dark:hover:text-white transition-colors"
                            >Backgrounds</a
                        >
                    </div>

                    <div
                        class="h-4 w-px bg-black/10 dark:bg-white/10 hidden md:block"
                    >
                    </div>

                    <div class="flex items-center gap-4">
                        <a
                            href="https://github.com/Likeur/jex"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-500 hover:text-black dark:text-white/60 dark:hover:text-white transition-colors"
                        >
                            <span class="sr-only">GitHub</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                                ></path><path d="M9 18c-4.51 2-5-2-7-2"
                                ></path></svg
                            >
                        </a>

                        <button
                            id="theme-toggle"
                            class="p-2 -mr-2 text-gray-500 hover:text-black dark:text-white/60 dark:hover:text-white transition-colors focus:outline-none rounded-full hover:bg-black/5 dark:hover:bg-white/10"
                        >
                            <span class="sr-only">Toggle theme</span>
                            <!-- Sun Icon (for Dark Mode - show when dark) -->
                            <svg
                                id="sun-icon"
                                class="hidden dark:block"
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><circle cx="12" cy="12" r="4"></circle><path
                                    d="M12 2v2"></path><path d="M12 20v2"
                                ></path><path d="m4.93 4.93 1.41 1.41"
                                ></path><path d="m17.66 17.66 1.41 1.41"
                                ></path><path d="M2 12h2"></path><path
                                    d="M20 12h2"></path><path
                                    d="m6.34 17.66-1.41 1.41"></path><path
                                    d="m19.07 4.93-1.41 1.41"></path></svg
                            >
                            <!-- Moon Icon (for Light Mode - show when light) -->
                            <svg
                                id="moon-icon"
                                class="block dark:hidden"
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"
                                ></path></svg
                            >
                        </button>
                    </div>
                </nav>
            </div>
        </header>

        <main class="relative z-10 flex-1 w-full max-w-7xl mx-auto px-6 py-12">
            <slot />
        </main>

        <footer
            class="relative z-10 w-full border-t border-black/5 dark:border-white/5 py-8"
        >
            <div
                class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row items-center justify-between gap-4"
            >
                <p class="text-sm text-gray-500 dark:text-white/40">
                    &copy; {new Date().getFullYear()} Jex Platform. Built for developers.
                </p>
                <div class="flex items-center gap-6">
                    <a
                        href="https://github.com/Likeur/jex"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-400 hover:text-black dark:text-white/40 dark:hover:text-white transition-colors"
                    >
                        <span class="sr-only">GitHub</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                        >
                    </a>
                    <a
                        href="https://x.com/likeurrr"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-400 hover:text-black dark:text-white/40 dark:hover:text-white transition-colors"
                    >
                        <span class="sr-only">X (Twitter)</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M4 4l9.733 13.067L19.733 4H4zM4 20l7.733-10.4L19.733 20H4z"
                                opacity="0"></path><path
                                d="M4 4l11.733 16h4.267l-11.733 -16z"
                            ></path><path
                                d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>
        </footer>

        <script>
            // Wait for DOM to load mostly to be safe, but script is at bottom so likely fine
            const handleToggleClick = () => {
                const element = document.documentElement;
                // Add/Remove class logic
                if (element.classList.contains("dark")) {
                    element.classList.remove("dark");
                    element.classList.add("light");
                    localStorage.setItem("theme", "light");
                } else {
                    element.classList.add("dark");
                    element.classList.remove("light");
                    localStorage.setItem("theme", "dark");
                }
            };

            const toggle = document.getElementById("theme-toggle");
            if (toggle) {
                toggle.addEventListener("click", handleToggleClick);
            }
        </script>
    </body>
</html>

<style is:global>
    :root {
        --font-sans: "Inter", system-ui, sans-serif;
    }
    html {
        font-family: var(--font-sans);
    }
</style>
