---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const {
    title = "Jex | Frontend Tools",
    description = "Premium tools for frontend developers. Generate unique assets, tweak CSS gradients, and create stunning backgrounds in seconds.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/jex.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content={description} />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://jextools.vercel.app" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="/previewjex.png" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content="https://jextools.vercel.app" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content="/previewjex.png" />

        <!-- Google tag (gtag.js) -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-PW0R0X8TKC"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-PW0R0X8TKC");
        </script>

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <script is:inline>
            (function () {
                try {
                    const localTheme = localStorage.getItem("theme");
                    const supportDarkMode = window.matchMedia(
                        "(prefers-color-scheme: dark)",
                    ).matches;

                    // Logic:
                    // 1. If explicit 'theme' in localStorage, use it.
                    // 2. Else default to 'dark' (project requirement), regardless of system preference for now to enforce "Dark by default".

                    if (localTheme === "light") {
                        document.documentElement.classList.remove("dark");
                        document.documentElement.classList.add("light");
                    } else {
                        document.documentElement.classList.add("dark");
                        document.documentElement.classList.remove("light");
                        if (!localTheme) {
                            localStorage.setItem("theme", "dark");
                        }
                    }
                } catch (e) {
                    console.error("Theme init error", e);
                }
            })();
        </script>
    </head>
    <body
        class="bg-gray-50 text-gray-900 dark:bg-[#0a0a0a] dark:text-white font-sans min-h-screen flex flex-col antialiased selection:bg-purple-500/30 transition-colors duration-300"
    >
        <div
            class="fixed inset-0 z-0 opacity-20 pointer-events-none mix-blend-multiply dark:mix-blend-normal"
            style="background-image: url('/noise.svg');"
        >
        </div>

        <Navbar />

        <main class="relative z-10 flex-1 w-full max-w-7xl mx-auto px-6 py-12">
            <slot />
        </main>

        <Footer />
    </body>
</html>

<style is:global>
    :root {
        --font-sans: "Inter", system-ui, sans-serif;
    }
    html {
        font-family: var(--font-sans);
    }
</style>
